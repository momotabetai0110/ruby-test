<h1>タスク一覧</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>説明</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td>
        <%= button_to "削除", task_path(task), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>